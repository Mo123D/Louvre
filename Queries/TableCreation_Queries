drop table if exists artwork, wasCreated, creator, workAs, museum, room

create table artwork (
    arkId varchar[15] primary key,
    title text,
    materialsAndTechniques text,
    objectType text,
    collection text,
    roomId references room
)

create table wasCreated (
    artworkId references artwork,
    creatorId references creator,
    placeOfCreation text,
    startYear integer,
    endYear integer primary key,
    epoch text,
    doubt boolean
)

create table creator (
    id varchar[8] primary key,
    name text,
    countryOfCitizenship text,
    birth date,
    death date
)

create table workAs (
    creatorId references creator,
    creationRole text
)

create table museum (
    id varchar[10] primary key,
    name text,
    city text,
    country text
)

create table room (
    id varchar[3],
    wing text,
    level varchar[1],
    primary key (id, wing),
    museumId references museum
)
